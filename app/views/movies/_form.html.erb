<%= simple_form_for(@movie) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :name, placeholder: 'Название фильма' %>
  	<%= f.input :release_date, :as => :date_picker, placeholder: 'Выбери дату, нажав на кнопку справа' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: 'Сохранить' %>
  </div>
<% end %>
